@model BookEnd.Models.BookStor
@{
    ViewData["Title"] = "Detail";
    //Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    .modal-dialog {
        max-width: 65% !important;
        color: #808080
    }
</style>

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">جزئیات کتاب</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        @if (Model.Image != null)
                        {
                            <img src="/Admin/Books/ViewImage/@Model.BookId" height="250" />
                        }
                        else
                        {
                            <img src="~/images/No_Image_Available.jpg" height="250" />
                        }

                    </div>


                    <div class="col-md-12">
                        <hr />
                        <p>
                            خلاصه کتاب : @Model.Summary
                        </p>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>
<div class="col-md-9">
    <div class="row">
        <div class="col-md-6">
            <p class="text-danger">عنوان کتاب : @Model.Title</p>
            <p>شابک : @Model.ISBN</p>
            <p>سال انتشار : @Model.PublishYear</p>
            <p>قیمت : @Model.Price</p>
            <p>موجودی : @Model.Stock</p>
            <p>تعداد صفحات : @Model.NumOfPages</p>
            <p>زبان کتاب : @Model.Languge.LanguegeName</p>
        </div>

    </div>
</div>
