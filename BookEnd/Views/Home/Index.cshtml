@{
    ViewData["Title"] = "Home Page";
}
  
    <div class="row">
        <div class="text-center col-md-8">
            <h1 class="display-6">کتاب فروشی ما</h1>
        </div>
    </div>
<div id="carouselExampleControls" class="carousel slide " style="margin-top:40px" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Slide-2.png" alt="First slide">
        </div>
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/slider1.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Slider2.jpg" alt="Three slide">
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">قبلی</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">بعدی</span>
    </a>
</div>
