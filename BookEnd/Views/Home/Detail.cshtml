@model BookEnd.Models.BookStor
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                اطلاعات کتاب @Model.Title
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="/images/No_Image_Available.jpg" height="150" />
                    </div>

                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-6">
                                <p>عنوان کتاب : @Model.Title</p>
                                <p>شابک : @Model.ISBN</p>
                                <p>سال انتشار : @Model.PublishYear</p>
                                <p>قیمت : @Model.Price</p>
                                <p>موجودی : @Model.Stock</p>
                                <p>تعداد صفحات : @Model.NumOfPages</p>
                               
                            </div>
                            <div class="col-md-6">
                                <p>
                                    وضعیت :
                                    @if (Model.IsPublish == true)
                                    {
                                        <span>منتشر شده</span>
                                    }

                                    else
                                    {
                                        <span>پیش نویس</span>
                                    }
                                </p>

                                <p>
                                    وزن :
                                    @Model.Weight
                                </p>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <hr />
                        <p>
                            خلاصه کتاب : @Model.Summary
                        </p>
                        <a asp-controller="Orders" asp-action="Order" asp-route-id="@Model.BookId" style="float:left" class="btn btn-primary">اضافه کردن به سبد خرید</a>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

